[Unit]
Description=AmberELEC EZStorage Setup
Before=emulationstation.service graphical.target
RequiredBy=emulationstation.service graphical.target

[Service]
Type=oneshot
Environment=HOME=/storage
ExecStart=/bin/bash /storage/.config/autostart/00-mount-EZSTORAGE.sh
ExecStart=/bin/bash /storage/.config/autostart/01-expand-EZSTORAGE.sh
ExecStart=/bin/bash /storage/.config/autostart/02-setup-EZSTORAGE.sh
RemainAfterExit=yes

[Install]
WantedBy=graphical.target
